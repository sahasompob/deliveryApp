<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_washing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.5dp"
    android:background="@drawable/cardview">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview">

        <ImageView
            android:id="@+id/im_machine"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/test_image"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/im_ic_arrow_right"
            android:layout_alignTop="@+id/im_machine"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mitr_light"
            android:text="@string/restaurant_shop"
            android:textColor="#4c4d4e"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_ic_arrow_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/restaurant_name"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/im_machine"
            android:src="@drawable/ic_watch_later" />

        <TextView
            android:id="@+id/delivery_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restaurant_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/im_ic_arrow_right"
            android:fontFamily="@font/mitr_light"
            android:text="@string/delivery_in"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/delivery_text"
            android:layout_alignBottom="@+id/minute_text"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/delivery_text"
            android:fontFamily="@font/mitr_light"
            android:text="10"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/minute_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/im_ic_arrow_right"
            android:layout_alignBaseline="@+id/delivery_text"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/number_text"
            android:fontFamily="@font/mitr_light"
            android:text="@string/delivery_time"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/im_machine"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/minute_text"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_favorite" />
    </RelativeLayout>

</android.support.v7.widget.CardView>